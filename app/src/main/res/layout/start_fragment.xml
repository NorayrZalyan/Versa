<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.start.StartFragment"
    android:background="@color/bacground_light">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"/>


    <LinearLayout
        android:id="@+id/Room_Position"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="250dp"
        android:background="@color/Bacground_color"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        android:layout_marginEnd="10dp">


        <TextView
            android:id="@+id/room_position_roomname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomName"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="27dp"/>

        <TextView
            android:id="@+id/room_position_roomid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1 "
            android:textColor="@color/white"
            android:gravity="right"
            android:textSize="20dp"/>


    </LinearLayout>




    <Button
        android:id="@+id/create_roomBt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/actionbutton"
        android:text="+"
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="330sp"
        android:layout_marginVertical="70sp"
        android:layout_marginBottom="1dp"
        android:gravity="center"/>



    <Button
        android:id="@+id/join_roomBt"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/actionbutton"
        android:text="join"
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="330sp"
        android:layout_marginVertical="70sp"
        android:layout_marginBottom="1dp"
        android:gravity="center"/>








    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />


</FrameLayout>