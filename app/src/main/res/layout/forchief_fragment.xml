<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.start.ForChiefFragment"
    android:background="@color/bacground_light">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"/>

    <Button
        android:id="@+id/create_roomBt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/actionbutton"
        android:text="+"
        android:textSize="20dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="330sp"
        android:layout_marginVertical="70sp"
        android:layout_marginBottom="1dp"
        android:gravity="center"/>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="300dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"/>


</FrameLayout>